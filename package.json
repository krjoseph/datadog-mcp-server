{
  "name": "datadog-mcp-server",
  "version": "1.0.8",
  "description": "MCP Server for Datadog API",
  "main": "dist/index.js",
  "type": "commonjs",
  "bin": {
    "datadog-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:http": "node dist/index.js --http --port=3000",
    "dev": "tsc && node dist/index.js",
    "dev:http": "tsc && node dist/index.js --http --port=3000",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:http": "./test-http.sh",
    "prepublishOnly": "npm run build",
    "publish:dry-run": "npm pack --dry-run"
  },
  "keywords": [
    "datadog",
    "mcp",
    "model-context-protocol",
    "observability",
    "api"
  ],
  "author": "GeLi2001",
  "license": "MIT",
  "dependencies": {
    "@datadog/datadog-api-client": "^1.33.1",
    "@modelcontextprotocol/sdk": "^1.8.0",
    "dotenv": "^16.4.7",
    "minimist": "^1.2.8",
    "typescript": "^5.8.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/minimist": "^1.2.5",
    "@types/node": "^25.2.1"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GeLi2001/datadog-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/GeLi2001/datadog-mcp-server/issues"
  },
  "homepage": "https://github.com/GeLi2001/datadog-mcp-server#readme"
}
